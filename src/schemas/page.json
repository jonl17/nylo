{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "UID"
      }
    },
    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1, heading2, heading3, heading4, heading5, heading6",
        "label": "Titill"
      }
    },
    "has_submenu": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["menu"],
        "tags": ["SUBMENU"],
        "label": "Has submenu"
      }
    },
    "is_subpage_of": {
      "type": "Link",
      "config": {
        "select": "document",
        "customtypes": ["page"],
        "tags": ["PARENT_PAGE"],
        "label": "Is subpage of"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {
          "image_reel": [],
          "rich_text": [],
          "all_news": [],
          "media": [],
          "richtext": [],
          "program": [],
          "current_exhibition": [],
          "upcoming_exhibition": []
        },
        "choices": {
          "richtext": {
            "type": "Slice",
            "fieldset": "RichText",
            "description": "Add text, links, buttons, etc... (4 types)",
            "icon": "format_color_text",
            "display": "list",
            "non-repeat": {
              "type": {
                "type": "Select",
                "config": {
                  "options": [
                    "large",
                    "large--offset-2",
                    "small--one-column-right",
                    "small--two-columns"
                  ],
                  "default_value": "large",
                  "label": "Type",
                  "placeholder": "Textbox type"
                }
              },
              "text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph, preformatted, heading1, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, embed, list-item, o-list-item, rtl",
                  "allowTargetBlank": true,
                  "label": "Text",
                  "placeholder": "Add text with links, buttons, etc...",
                  "labels": {
                    "XX": [
                      {
                        "name": "button-primary"
                      },
                      {
                        "name": "inline-link"
                      }
                    ]
                  }
                }
              }
            },
            "repeat": {}
          },
          "media": {
            "type": "Slice",
            "fieldset": "Media",
            "description": "Add 1 or 2 images",
            "icon": "image",
            "display": "list",
            "non-repeat": {},
            "repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {
                    "width": 755,
                    "height": 411
                  },
                  "thumbnails": [],
                  "label": "Image"
                }
              }
            }
          },
          "program": {
            "type": "Slice",
            "fieldset": "Program",
            "description": "Dynamic component (programmer)",
            "icon": "directions_run",
            "display": "list",
            "non-repeat": {
              "program_name": {
                "type": "Text",
                "config": {
                  "label": "Program name"
                }
              }
            },
            "repeat": {
              "parameter_label": {
                "type": "Text",
                "config": {
                  "label": "Parameter label"
                }
              },
              "parameter_value": {
                "type": "Text",
                "config": {
                  "label": "Parameter value"
                }
              }
            }
          },
          "current_exhibition": {
            "type": "Slice",
            "fieldset": "Current Exhibition",
            "description": "Displays an exhibition and links to it's detail page.",
            "icon": "brush",
            "display": "list",
            "non-repeat": {
              "exhibition": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "customtypes": ["exhibition"],
                  "label": "Exhibition",
                  "placeholder": "Choose it wisely!"
                }
              }
            },
            "repeat": {}
          },
          "upcoming_exhibition": {
            "type": "Slice",
            "fieldset": "Upcoming exhibition",
            "description": "Links to an exhibition",
            "icon": "assignment_ind",
            "display": "list",
            "non-repeat": {
              "upcoming_exhibition": {
                "type": "Link",
                "config": {
                  "select": "document",
                  "customtypes": ["exhibition"],
                  "label": "Upcoming exhibition"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  }
}
